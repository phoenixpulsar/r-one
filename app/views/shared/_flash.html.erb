<% if flash.any? %>
  <div class="pointer-events-none fixed inset-x-0 top-24 z-50 flex justify-center px-6">
    <div class="w-full max-w-md space-y-3">
      <% flash.each do |type, message| %>
        <% next if message.blank? %>
        <% tone = type.to_s == "notice" ? "emerald" : "rose" %>
        <div class="pointer-events-auto rounded-2xl border border-#{tone}-500/40 bg-slate-900/90 px-5 py-4 text-sm text-slate-100 shadow-xl backdrop-blur">
          <div class="flex items-start gap-3">
            <div class="mt-0.5">
              <% if tone == "emerald" %>
                <svg class="h-5 w-5 text-emerald-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                </svg>
              <% else %>
                <svg class="h-5 w-5 text-rose-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m0 3.75h.008v.008H12v-.008zM21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              <% end %>
            </div>
            <div>
              <p class="font-medium text-white"><%= message %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
