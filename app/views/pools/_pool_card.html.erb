<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow" data-pool-id="<%= pool.id %>">
  <div class="relative h-48 bg-gray-200">
    <% if pool.photos.attached? && pool.photos.first %>
      <%= image_tag pool.photos.first, class: "w-full h-full object-cover", alt: pool.name %>
    <% else %>
      <div class="flex items-center justify-center h-full">
        <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
      </div>
    <% end %>
    
    <div class="absolute top-2 left-2 flex gap-2">
      <% if pool.verified %>
        <span class="px-2 py-1 bg-blue-600 text-white text-xs font-semibold rounded">Verified</span>
      <% end %>
      <% if pool.indoor %>
        <span class="px-2 py-1 bg-green-600 text-white text-xs font-semibold rounded">Indoor</span>
      <% end %>
      <% if pool.outdoor %>
        <span class="px-2 py-1 bg-yellow-600 text-white text-xs font-semibold rounded">Outdoor</span>
      <% end %>
    </div>
  </div>
  
  <div class="p-4">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-lg font-semibold text-gray-900"><%= link_to pool.name, pool_path(pool), class: "hover:text-blue-600" %></h3>
      <% if pool.respond_to?(:distance) && pool.distance %>
        <span class="text-sm text-gray-600"><%= pool.distance %> mi</span>
      <% end %>
    </div>
    
    <p class="text-sm text-gray-600 mb-3">
      <%= pool.city %>, <%= pool.state %>
    </p>
    
    <div class="flex items-center gap-4 mb-3 text-sm text-gray-700">
      <span><%= pool.length_value %> <%= pool.length_unit %></span>
      <span>â€¢</span>
      <span><%= pluralize(pool.total_lanes, 'lane') %></span>
    </div>
    
    <div class="mb-3">
      <span class="text-lg font-bold text-gray-900">
        $<%= number_with_precision(pool.price_per_hour, precision: 2) %>
      </span>
      <span class="text-sm text-gray-600">/hour</span>
    </div>
    
    <% next_slot = pool.next_available_slot %>
    <% if next_slot %>
      <p class="text-sm text-green-600 mb-3">
        Next available: <%= next_slot.slot_date.strftime('%b %d') %> at <%= next_slot.start_time.strftime('%I:%M %p') %>
      </p>
    <% end %>
    
    <div class="flex flex-wrap gap-2 mb-4">
      <% if pool.open_stall_showers || pool.private_showers %>
        <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Showers
        </span>
      <% end %>
      <% if pool.day_lockers %>
        <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Lockers
        </span>
      <% end %>
      <% if pool.lifeguard_on_duty %>
        <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Lifeguard
        </span>
      <% end %>
      <% if pool.has_coaches %>
        <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Coaches
        </span>
      <% end %>
      <% if pool.parking_available %>
        <span class="inline-flex items-center px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded">
          <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          Parking
        </span>
      <% end %>
    </div>
    
    <%= link_to "View Details", pool_path(pool), class: "block w-full px-4 py-2 bg-blue-600 text-white text-center rounded-md hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
  </div>
</div>
