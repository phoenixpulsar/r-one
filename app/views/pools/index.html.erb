<div class="w-full min-h-screen bg-gray-50">
  <!-- Modern Header with Gradient -->
  <div class="bg-gradient-to-br from-blue-600 to-blue-700 shadow-lg mb-8 -mx-5 px-5">
    <div class="max-w-7xl mx-auto py-10">
      <h1 class="text-4xl font-bold text-white mb-6">Find Your Perfect Lap Pool</h1>
      
      <%= form_with url: pools_path, method: :get, class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4", data: { controller: "pool-search" } do |form| %>
        <div class="lg:col-span-2">
          <%= form.label :location, "Location", class: "block text-sm font-medium text-white/90 mb-2" %>
          <%= form.text_field :location, 
              placeholder: "City, ZIP, or coordinates", 
              value: params[:location],
              class: "w-full px-4 py-2.5 bg-white/95 border-0 rounded-lg shadow-sm text-gray-900 placeholder-gray-400 focus:ring-2 focus:ring-white focus:bg-white transition-all" %>
        </div>
        
        <div>
          <%= form.label "filters[date]", "Date", class: "block text-sm font-medium text-white/90 mb-2" %>
          <%= form.date_field "filters[date]", 
              value: @filter_params[:date],
              class: "w-full px-4 py-2.5 bg-white/95 border-0 rounded-lg shadow-sm text-gray-900 focus:ring-2 focus:ring-white focus:bg-white transition-all" %>
        </div>
        
        <div>
          <%= form.label "filters[start_time]", "Time", class: "block text-sm font-medium text-white/90 mb-2" %>
          <%= form.time_field "filters[start_time]", 
              value: @filter_params[:start_time],
              class: "w-full px-4 py-2.5 bg-white/95 border-0 rounded-lg shadow-sm text-gray-900 focus:ring-2 focus:ring-white focus:bg-white transition-all" %>
        </div>
        
        <div>
          <%= form.label "filters[duration]", "Duration", class: "block text-sm font-medium text-white/90 mb-2" %>
          <%= form.number_field "filters[duration]", 
              value: @filter_params[:duration] || 1,
              min: 0.5,
              step: 0.5,
              class: "w-full px-4 py-2.5 bg-white/95 border-0 rounded-lg shadow-sm text-gray-900 focus:ring-2 focus:ring-white focus:bg-white transition-all" %>
          <span class="text-xs text-white/70 mt-1 inline-block">hours</span>
        </div>
        
        <div>
          <%= form.label :sort, "Sort by", class: "block text-sm font-medium text-white/90 mb-2" %>
          <%= form.select :sort, 
              [['Name', nil], ['Distance', 'distance'], ['Price', 'price'], ['Earliest Slot', 'earliest_slot'], ['Most Lanes', 'most_lanes']], 
              { selected: params[:sort] },
              class: "w-full px-4 py-2.5 bg-white/95 border-0 rounded-lg shadow-sm text-gray-900 focus:ring-2 focus:ring-white focus:bg-white transition-all" %>
        </div>
        
        <div class="flex items-end">
          <%= form.submit "Search", class: "w-full px-6 py-2.5 bg-white text-blue-600 font-semibold rounded-lg shadow-sm hover:bg-blue-50 focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-blue-600 transition-all" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Main Content Container -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <div class="flex gap-8" data-controller="pool-filters pool-results">
      <!-- Left Filter Panel (Desktop) -->
      <div class="hidden lg:block w-80 flex-shrink-0">
        <div class="sticky top-24">
          <%= render 'filter_panel' %>
        </div>
      </div>
      
      <!-- Mobile Filter Button -->
      <button 
        data-action="click->pool-filters#toggleMobile"
        class="lg:hidden fixed bottom-6 right-6 z-50 px-5 py-3.5 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700 hover:shadow-xl flex items-center gap-2 transition-all">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
        </svg>
        <span class="font-medium">Filters</span>
      </button>
      
      <!-- Mobile Filter Overlay -->
      <div 
        data-pool-filters-target="overlay"
        class="lg:hidden fixed inset-0 bg-black/50 backdrop-blur-sm z-40 hidden transition-opacity"
        data-action="click->pool-filters#closeMobile">
      </div>
      
      <!-- Mobile Filter Panel -->
      <div 
        data-pool-filters-target="mobilePanel"
        class="lg:hidden fixed inset-y-0 left-0 w-80 bg-white shadow-2xl z-50 transform -translate-x-full transition-transform duration-300 overflow-y-auto">
        <div class="sticky top-0 bg-white border-b border-gray-200 px-6 py-4 flex justify-between items-center z-10">
          <h2 class="text-lg font-bold text-gray-900">Filters</h2>
          <button data-action="click->pool-filters#closeMobile" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <%= render 'filter_panel', mobile: true %>
      </div>
      
      <!-- Results Area -->
      <div class="flex-1 min-w-0">
        <div class="flex justify-between items-center mb-6">
          <div>
            <h2 class="text-2xl font-bold text-gray-900">
              <%= @pools.count %> <%= @pools.count == 1 ? 'Pool' : 'Pools' %>
            </h2>
            <p class="text-sm text-gray-600 mt-1">Showing available lap pools</p>
          </div>
          
          <button 
            data-action="click->pool-results#toggleMap"
            class="px-4 py-2.5 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50 hover:border-gray-400 flex items-center gap-2 transition-colors shadow-sm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
            <span data-pool-results-target="mapToggleText">Show Map</span>
          </button>
        </div>
        
        <div class="mb-6 flex flex-wrap gap-2">
          <%= render 'filter_chips' %>
        </div>
        
        <div data-pool-results-target="list">
          <% if @pools.any? %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <% @pools.each do |pool| %>
                <%= render 'pool_card', pool: pool %>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-16 bg-white rounded-xl border-2 border-dashed border-gray-300">
              <div class="inline-flex items-center justify-center w-16 h-16 bg-gray-100 rounded-full mb-4">
                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-2">No pools found</h3>
              <p class="text-gray-600 max-w-sm mx-auto">Try adjusting your filters or expanding your search area to find more pools.</p>
            </div>
          <% end %>
        </div>
        
        <div data-pool-results-target="map" class="hidden">
          <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center" data-controller="pool-map">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-50 to-blue-100 rounded-full mb-6">
              <svg class="h-10 w-10 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">Map View</h3>
            <p class="text-gray-600 max-w-md mx-auto mb-4">Interactive map integration coming soon. Google Maps API key required.</p>
            <div class="inline-flex items-center px-4 py-2 bg-gray-100 rounded-lg text-sm text-gray-700">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Distance calculations use Haversine formula
            </div>
            <div class="hidden">
              <% @pools.each do |pool| %>
                <span data-pool-id="<%= pool.id %>" 
                      data-lat="<%= pool.latitude %>" 
                      data-lng="<%= pool.longitude %>"
                      data-name="<%= pool.name %>">
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
