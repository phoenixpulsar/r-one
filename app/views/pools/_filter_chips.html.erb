<% if @filter_params.present? && @filter_params.values.any?(&:present?) %>
  <% @filter_params.each do |key, value| %>
    <% next if value.blank? || (value.is_a?(Array) && value.reject(&:blank?).empty?) %>
    
    <% if value.is_a?(Array) %>
      <% value.reject(&:blank?).each do |v| %>
        <%= link_to pools_path(filters: @filter_params.except(key).merge(key => @filter_params[key] - [v]), location: params[:location], sort: params[:sort]), 
            class: "inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-50 text-blue-700 rounded-full text-sm font-medium hover:bg-blue-100 transition-colors border border-blue-200" do %>
          <%= "#{key.to_s.humanize}: #{v.humanize}" %>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      <% end %>
    <% elsif value == '1' %>
      <%= link_to pools_path(filters: @filter_params.except(key), location: params[:location], sort: params[:sort]), 
          class: "inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-50 text-blue-700 rounded-full text-sm font-medium hover:bg-blue-100 transition-colors border border-blue-200" do %>
        <%= key.to_s.humanize %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      <% end %>
    <% else %>
      <%= link_to pools_path(filters: @filter_params.except(key), location: params[:location], sort: params[:sort]), 
          class: "inline-flex items-center gap-1.5 px-3 py-1.5 bg-blue-50 text-blue-700 rounded-full text-sm font-medium hover:bg-blue-100 transition-colors border border-blue-200" do %>
        <%= "#{key.to_s.humanize}: #{value}" %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      <% end %>
    <% end %>
  <% end %>
<% end %>
